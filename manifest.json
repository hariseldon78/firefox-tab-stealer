{
    "manifest_version": 2,
    "name": "Tab Stealer",
    "description": "Steal tabs from other Firefox windows, when you open duplicate tabs.",
    "version": "1.2",
    "permissions": [
        "tabs",
        "storage",
        "notifications"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "tab-stealer@midnightaddonlab.eu"
        }
    }
}
